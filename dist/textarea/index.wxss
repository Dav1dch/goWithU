.wux-textarea {
  position: relative;
  display: -ms-flexbox;
  display: flex;
  align-item: center;
}

.wux-textarea__label {
  margin-left: 0;
  margin-right: 10rpx;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  width: 210rpx;
  color: #000000;
}

.wux-textarea__control {
  -ms-flex: 1;
  flex: 1;
}

.wux-textarea__thumb {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.wux-textarea__item {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 1.47058824em;
  min-height: 1.47058824em;
  line-height: 1.47058824;
}

.wux-textarea__extra {
  color: rgb(12, 11, 11);
  margin-left: 10rpx;
}

.wux-textarea__error {
  margin-left: 10rpx;
}

.wux-textarea__clear {
  display: none;
}

.wux-textarea--focus .wux-textarea__clear {
  display: block;
}

.wux-textarea--disabled {
  opacity: 1;
}

.wux-textarea--error .wux-textarea__control {
  color: #0e0d0d;
}

.wux-textarea__count {
  position: absolute;
  bottom: -12rpx;
  right: 0;
  color: rgb(10, 10, 10);
  font-size: 28rpx;
  line-height: 1.47058824;
}

.wux-textarea__current {
  color: #333;
}

.wux-textarea--has-count .wux-textarea__control {
  padding-bottom: 20rpx;
}
