/* pages/user/user.wxss */



.picture{
  height: 20%;
}

page{
  width: 100%;
  height: 100%;
}

.top {
  height: 30%;
  width: 100%;
  background: linear-gradient(#84fab0, #8fd3f4);
 
  box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.2);
}

.avatar{
  overflow: hidden;
  border-radius: 50%;
  height: 170rpx;
  width: 170rpx;
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.box {
  height: 100%;
  display: flex;
  justify-content: space-around;
}


.box1 {
  height: 150px;
  border: 2px solid #fff;  
  border-radius: 5%;
  box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
}
.box2 {
  height: 150px;
  background: linear-gradient(#baf0ce, #bce5fa);
  border: 2px solid #fff;  
  border-radius: 5%;
  box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
}

.vitem {
  height: 100%;
  text-align: center;
  display: flex;  
  flex-direction: row;  
  justify-items: center;
  align-items: center; 

}

.display{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text{
  color: #4de07e
}