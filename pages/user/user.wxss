/* pages/user/user.wxss */

.label{
 position: absolute;
  z-index: 2;
margin-top: 128rpx;
margin-left: 39rpx;
}


.picture{
  height: 20%;
}

page{
  width: 100%;
  height: 100%;
}

.top {
  height: 30%;
  width: 100%;
  background: linear-gradient(#84fab0, #8fd3f4);
 
  box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.2);
}

.avatar{
  position: relative;
  z-index: 1;
  overflow: hidden;
  border-radius: 50%;
  height: 170rpx;
  width: 170rpx;
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);

}

.box {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}



.box1 {
  height: 150px;
  border: 2px solid #fff;  
  border-radius: 5%;
  box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
}
.box2 {
  height: 150px;
  background: linear-gradient(#baf0ce, #bce5fa);
  border: 2px solid #fff;  
  border-radius: 5%;
  box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
}

.vitem {
  padding-top: 150rpx;
  text-align: center;
  display: flex;  
  flex-direction: column;  
  align-items: center; 

}

.display{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


.name{
  padding-top: 20rpx;
  text-align: center;
  overflow: hidden;
  font-weight: bold;
  color: #fff;
}
