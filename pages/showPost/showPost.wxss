/* pages/showPost/showPost.wxss */
.avatar{
  overflow: hidden;
  border-radius: 50%;
  height: 60rpx;
  width: 60rpx;
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.img{
  overflow: hidden;
  border-radius: 50%;
  height: 60rpx;
  width: 60rpx;
}

.row{
  display: flex;
  flex-direction: row;
  align-items: center;    /**子view垂直居中*/

}

.title{
  font-size: 20px;
}

.text{
  font-size: 14px;
  color: grey;
}

.col{
  display: flex;
  flex-direction: column;
  align-items: left;    /**子view垂直居左*/
}

.time{
  font-size: 13px;
  color: grey;
  align-content: bottom;
}

.readCount{
  font-size: 14px;
  color: grey;
}


